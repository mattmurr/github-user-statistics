      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.0.1",
    "firebase-tools": "^8.14.1",
    "postcss": "^8.1.4",
    "postcss-cli": "^8.2.0",
    "tailwindcss": "^1.9.6"
  }

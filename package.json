  "private": true,
  "dependencies": {
    "@apollo/client": "^3.2.5",
    "graphql": "^15.4.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.0",
    "react-waypoint": "^9.0.3"
  },
  "scripts": {
